<div id="studentForm">
    <form>





        <input type="text" id="name" name="name" placeholder="Center Name" />
        <input type="text" id="location" name="location" placeholder="Location" />



    </form>
    <button id="add" onclick="addLocation()">Add Location</button>
</div>


<script>
    function addLocation() {
        var center = new Object();
        center.Name = $('#name').val();
        center.location = $("#location").val();

        $.ajax({
            type: 'POST',
            url: '/centerManage/InsertCenters/',
            dataType: 'json',
            data: center,
            success: function (data, textStatus, xhr) {
                alert("Center Has been Added");
                window.location.href = "/AdminCenter";
            },
            error: function (xhr, textStatus, error) {
                alert("Error");
                console.log(xhr.statusText);
                console.log(textStatus);
                console.log(error);
            }
        });
    }
</script>
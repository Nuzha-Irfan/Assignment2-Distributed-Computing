<div id="studentForm">
    <form>




        <input type="number" id="id" name="id" placeholder="Center ID" />
        <input type="text" id="name" name="name" placeholder="Center Name" />
        <input type="text" id="location" name="location" placeholder="Location" />



    </form>
    <button id="update" onclick="update()">Update Location</button>
</div>

<script>
    window.onload = getName();

    function update() {
        var center = new Object();
        center.Name = $('#name').val();
        center.location = $("#location").val();
       
        $.ajax({
            type: 'PUT',
            url: '/updateCenter/Update/' + $('#id').val(),
            dataType: 'json',
            data: center,
            success: function () {

                alert("Data updated");
                window.location.href = "/AdminCenter";
            },
            error: function (xhr, textStatus, error) {
                alert("Error");
                console.log(xhr.statusText);
                console.log(textStatus);
                console.log(error);
            }
        });
    }

    function getName() {

        var b = localStorage.getItem("myValue");
        //alert("The Value Received is " + b);
        document.getElementById('id').value = b;
        var resetValue = 0;
        localStorage.setItem("myValue", resetValue);


    }

</script>